<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiaryMyLife">
        <receiver
            android:name=".extensions.Notification"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.DiaryMyLife"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ui.detail.MoodDetailActivity"
            android:theme="@style/Theme.DiaryMyLife"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.create.CreateMoodActivity"
            android:theme="@style/Theme.DiaryMyLife"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DiaryMyLife"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.setting.notification.NotificationActivity"
            android:exported="false"
            android:theme="@style/Theme.DiaryMyLife" />
        <activity
            android:name=".ui.setting.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.DiaryMyLife" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false"
            android:theme="@style/Theme.DiaryMyLife" />
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.DiaryMyLife"
            android:noHistory="true"/>
        <activity
            android:name=".ui.list.ListActivity"
            android:exported="false"
            android:theme="@style/Theme.DiaryMyLife" />
    </application>

</manifest>