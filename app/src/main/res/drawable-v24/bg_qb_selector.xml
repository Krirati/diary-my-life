            android:bottom="2dp"
            android:left="1dp"
            android:right="1dp"
            android:top="0dp" />
        <solid android:color="@color/shadow_outer" />

    </shape>
    <shape>
        <corners android:radius="16dp" />
        <padding
            android:bottom="2dp"
            android:left="1dp"
            android:right="1dp"
            android:top="0dp" />
