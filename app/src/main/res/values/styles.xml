<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Calendar -->
    <style name="CalenderViewCustom" parent="android:TextAppearance.DeviceDefault">
        <item name="colorAccent">@color/dark_grey</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="TextAppearance.DiaryMyLife" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>

    <style name="TextAppearance.DiaryMyLife.H1" parent="TextAppearance.DiaryMyLife">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/primary_honestwhite</item>
    </style>

    <style name="TextAppearance.DiaryMyLife.H1.Black" parent="TextAppearance.DiaryMyLife">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.DiaryMyLife.H2.Black" parent="TextAppearance.DiaryMyLife">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.DiaryMyLife.H3.Black" parent="TextAppearance.DiaryMyLife">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.DiaryMyLife.Subtitle.Grey" parent="TextAppearance.DiaryMyLife">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#728092</item>
    </style>

    <style name="TextAppearance.DiaryMyLife.Subtitle.Black" parent="TextAppearance.DiaryMyLife">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleAmber">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/amber_800</item>
    </style>

    <style name="SubtitleAmberBold">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/amber_800</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_selector</item>
    </style>

    <style name="Button.Space.Long" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/dp_16</item>
        <item name="android:paddingHorizontal">@dimen/dp_64</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>