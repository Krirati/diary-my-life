<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_card_action"
    android:orientation="horizontal"
    android:padding="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_8">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chipImage"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView"
        tools:srcCompat="@drawable/crying" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView"
        style="@style/TextAppearance.DiaryMyLife.H3.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/chipImage"
        app:layout_constraintStart_toEndOf="@+id/chipImage"
        app:layout_constraintTop_toTopOf="@+id/chipImage"
        tools:text="test mood" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_transparent"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chipImage" />


</androidx.constraintlayout.widget.ConstraintLayout>